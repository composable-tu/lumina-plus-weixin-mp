<error-popup bind:visible-change="errorVisibleChange" message="{{errorMessage}}" visible="{{errorVisible}}"/>

<t-navbar t-class-content="t-navbar-content" t-class-placeholder="t-navbar-placeholder">
    <view class="title" slot="left">{{i18n.application}}</view>
</t-navbar>

<view>
    <view class="block py-16rpx">
        <view class="custom-desc mx-48rpx mb-16rpx">{{i18n.activities}}</view>
        <t-grid column="{{4}}" theme="card">
            <t-grid-item icon="calendar-2" text="{{i18n.checkin}}"/>
            <t-grid-item icon="upload" text="{{i18n.fileSubmission}}"/>
        </t-grid>
    </view>

    <view class="block py-16rpx">
        <view class="custom-desc mx-48rpx mb-16rpx">{{i18n.approvals}}</view>
        <t-grid column="{{4}}" theme="card">
            <t-grid-item icon="seal" text="{{i18n.projectApplication}}"/>
            <t-grid-item icon="history" text="{{i18n.myApprovals}}"/>
        </t-grid>
    </view>

    <view class="block py-16rpx">
        <view class="custom-desc mx-48rpx mb-16rpx">{{i18n.group}}</view>
        <t-grid column="{{4}}" theme="card">
            <t-grid-item icon="usergroup-add" text="{{i18n.joinGroup}}"/>
        </t-grid>
    </view>
</view>


